<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/outgoing_img_msg_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@null"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:paddingStart="70dp">

    <ImageView
        android:id="@+id/outgoing_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/my_chat_bubble"
        android:elevation="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/accompanyme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outgoing_time_stamp_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/my_chat_bubble"
        android:elevation="10dp"
        android:gravity="end|center"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="11:25"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/outgoing_img"
        app:layout_constraintTop_toBottomOf="@id/outgoing_img" />
</androidx.constraintlayout.widget.ConstraintLayout>
