<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/incoming_img_msg_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@null"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:paddingEnd="70dp">

    <TextView
        android:id="@+id/incoming_sender_id_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/msg_white"
        android:elevation="10dp"
        android:gravity="start|center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Tanay"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/incoming_img"
        app:layout_constraintEnd_toEndOf="@+id/incoming_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/incoming_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/msg_white"
        android:elevation="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/accompanyme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/incoming_sender_id_txt" />

    <TextView
        android:id="@+id/incoming_time_stamp_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/msg_white"
        android:elevation="10dp"
        android:gravity="end|center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:text="11:25"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/incoming_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incoming_img" />
</androidx.constraintlayout.widget.ConstraintLayout>
